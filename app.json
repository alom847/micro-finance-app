{
  "expo": {
    "name": "microfinance-expo",
    "slug": "microfinance-expo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/logo-new.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nathgoutam93.hmicrofin"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#9c05ed"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.nathgoutam93.hmicrofin"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "cameraPermission": "App wants to access your camera",
          "photosPermission": "App wants to access your photos"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
